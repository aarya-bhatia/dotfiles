#!/bin/bash
[ -f ~/.bash_profile ] && . ~/.bash_profile

lxpolkit &
mpd &
sxhkd &
dunst &
nm-applet &
blueman-applet &
dropbox &
nightlight.sh &
statusinfo.sh &
screenlock.sh &
nextcloud --background &
xss-lock --transfer-sleep-lock -- i3lock --nofork &

while :; do
    test $(xrandr --query | grep -q " connected " | wc -l) -eq 1 && ~/.screenlayout/default.sh || ~/.screenlayout/desktop.sh 
    wallpaper.sh
    dwm
done
